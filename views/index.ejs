<%- include('partials/header.ejs'); -%>

<section class="showcase">
  <div class="container">
    <h1>The Movie Reviewer</h1>
    <div class="flex">
      <img src="/img/video-camera.png" alt="video-camera">
      <a href="https://www.flaticon.com/free-icons/cinema" title="cinema icons">Cinema icons created by Good Ware - Flaticon</a>
    </div>
    
  </div>
</section>

<section class="hot-movies">
  <div class="container">
    <h2>Hottest Movies</h2>
    <div class="grid">
      <% for(let i = 0; i < 6; i++) { %>
        <div class="movie">
          <a href="/reviews?movie=<%=movies[0].title%>">
            <img src="https://image.tmdb.org/t/p/original/<%= movies[0].poster_path  %>" alt="<%= movies[0].title %> poster">
            <h4><%= movies[0].title %></h4>
              <h4><%= movies[0].review_count %> reviews</h4>
            <h4>‚≠ê <%= Math.round( movies[0].avg_rating *100)/100 %></h4>
          </a>
          
        </div>
      <% } %>
    </div>
  </div>
</section>

<section class="new-reviews">
  <div class="container">
    <h2>Newest Reviews</h2>
    <div class="grid">
      <% for(let i = 0; i < 6; i++) { %>
        <div class="review">
          <img src="https://image.tmdb.org/t/p/original/<%= reviews[0].poster_path  %>" alt="<%= reviews[0].title %> poster">
          <a href=""><%= reviews[0].title %></a>
          <a href="/profile?user=<%=reviews[0].username%>"><%= reviews[0].username %></a>
          <h4><%= reviews[0].rating %>/10</h4>
          <p><%= reviews[0].review %></p>
        </div>
      <% } %>
    </div>
  </div>
</section>
  
<%- include('partials/footer.ejs'); -%>